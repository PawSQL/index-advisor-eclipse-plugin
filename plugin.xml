<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="cn.sqllabs.ia.plugin.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="cn.sqllabs.ia.plugin.commands.category"
            name="Sample Command"
            id="cn.sqllabs.ia.plugin.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="cn.sqllabs.ia.plugin.handlers.IndexAdvisorHandler"
            commandId="cn.sqllabs.ia.plugin.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="cn.sqllabs.ia.plugin.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
    <menuContribution 
          locationURI="popup:org.eclipse.ui.popup.any?after=additions">
       <menu
             commandId="cn.sqllabs.ia.plugin.commands.sampleCommand"
             id="cn.sqllabs.ia.plugin.popupMenu"
             label="Index Advise">
       </menu>
    </menuContribution>
          <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
             <command
            label="Index Advisor2"
            commandId="cn.sqllabs.ia.plugin.commands.sampleCommand">
      </command>
         <menu
               id="com.coala.core.menus.popupMenu"
               label="Index Advisor"
               mnemonic="o">

         </menu>
      </menuContribution>
    
    
    
   </extension>
      <extension
         point="org.eclipse.ui.preferencePages">
      <page
            id="cn.sqllabs.ia.plugin.properties.IndexAdvisorPropertyPage"
            name="Index Advisor Preferences"
            class="cn.sqllabs.ia.plugin.properties.IndexAdvisorPropertyPage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="cn.sqllabs.ia.plugin.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            id="cn.sqllabs.ia.plugin.properties.IAPropertyPage"
            name="IA Config"
            class="cn.sqllabs.ia.plugin.properties.IAPropertyPage"
            >
         <enabledWhen>
            <instanceof
                  value="org.eclipse.core.resources.IProject">
            </instanceof>
         </enabledWhen>
      </page>
            <page
            id="cn.sqllabs.ia.plugin.properties.IndexAdvisorPropertyPage.project"
            name="Index Advisor Config"
            class="cn.sqllabs.ia.plugin.properties.IndexAdvisorPropertyPage"
            objectClass="org.eclipse.core.resources.IProject"
	        adaptable="true"
            >
         <enabledWhen>
            <instanceof
                  value="org.eclipse.core.resources.IProject">
            </instanceof>
         </enabledWhen>
      </page>
   </extension>
</plugin>
